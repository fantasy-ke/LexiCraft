{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CorsOptions": {
    "AllowedOrigins": [
      "https://localhost:5173"
    ]
  },
  "OpenApiOptions": {
    "Title": "词汇技艺 Identity.Service Api",
    "Name": "词汇技艺 Identity.Service Api",
    "Description": "词汇技艺 Identity.Service Api",
    "AuthorUrl": "https://github.com/fantasy-ke",
    "AuthorEmail": "fantasyke@qq.com",
    "OAuthServerUrl": "https://localhost:7001",
  },
  "OAuthOptions": {
    "CookieName": "__SPA-BFF",
    "ClientId": "spa-bff-code-flow",
    "ClientSecret": "secret",
    "ResponseType": "code",
    "ResponseMode": "query",
    "GetClaimsFromUserInfoEndpoint": true,
    "MapInboundClaims": false,
    "Authority": "https://localhost:3001/auth"
  },
  "PostgresOptions": {
    "ConnectionString": "Host=172.144.21.1;Port=5432;Database=lexicon-craft;User Id=postgres;Password=bb123456;"
  },
  "App": {
    "RedisCache": {
      "Enable": true,
      "ConnectionString": "172.144.21.1:16379",
      "Password": "bb123456",
      "DefaultDb": 0,
      "KeyPrefix": "lexicon-craft",
      "Ssl": false,
      "SideCache": {
        "Enable": true,
        "Capacity": 10,
        "KeyFilterCache": "Key",
        "ExpiredMinutes": 60
      }
    }
  },
  "CaptchaOptions": {
    "CaptchaType": 8, // 验证码类型
    "CodeLength": 4, // 验证码长度, 要放在CaptchaType设置后  当类型为算术表达式时，长度代表操作的个数, 例如2
    "ExpirySeconds": 60, // 验证码过期秒数
    "IgnoreCase": true, // 比较时是否忽略大小写
    "StoreageKeyPrefix": "lexicon-craft", // 存储键前缀
    "ImageOption": {
      "Animation": false, // 是否启用动画
      "FontSize": 32, // 字体大小
      "Width": 100, // 验证码宽度
      "Height": 40, // 验证码高度
      "BubbleMinRadius": 5, // 气泡最小半径
      "BubbleMaxRadius": 10, // 气泡最大半径
      "BubbleCount": 3, // 气泡数量
      "BubbleThickness": 1.0, // 气泡边沿厚度
      "InterferenceLineCount": 3, // 干扰线数量
      "FontFamily": "epilog", // 包含actionj,epilog,fresnel,headache,lexo,prefix,progbot,ransom,robot,scandal,kaiti
      "FrameDelay": 15, // 每帧延迟,Animation=true时有效, 默认30
      "BackgroundColor": "#ffffff", //  格式: rgb, rgba, rrggbb, or rrggbbaa format to match web syntax, 默认#fff
      "ForegroundColors": "", //  颜色格式同BackgroundColor,多个颜色逗号分割，随机选取。不填，空值，则使用默认颜色集
      "Quality": 100, // 图片质量（质量越高图片越大，gif调整无效可能会更大）
      "TextBold": false // 粗体，该配置2.0.3新增
    }
  }
}
