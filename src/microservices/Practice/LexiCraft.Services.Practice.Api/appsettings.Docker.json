{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "SerilogLogging": {
    "ApplicationName": "lexiCraft.Practice",
    "EnableAsync": true,
    "EnableConsole": true,
    "EnableFileLogging": false,
    "Seq": {
      "Enabled": false,
      "ServerUrl": "http://seq:5341/",
      "ApiKey": ""
    },
    "MinimumLevelOverrides": {
      "Microsoft": "Information",
      "System": "Warning",
      "LexiCraft.Services.Practice": "Information"
    }
  },
  "MongoOptions": {
    "ConnectionString": "mongodb://mongodb:27017/lexicraft_practice",
    "DisableTracing": false,
    "MaxConnectionPoolSize": 100,
    "MinConnectionPoolSize": 5,
    "MaxConnectionIdleTime": "00:10:00",
    "MaxConnectionLifeTime": "00:30:00",
    "ConnectTimeout": "00:00:30",
    "SocketTimeout": "00:00:30",
    "ServerSelectionTimeout": "00:00:30",
    "EnablePerformanceMonitoring": true
  },
  "RedisOptions": {
    "ConnectionString": "redis:6379"
  },
  "OAuthOptions": {
    "Issuer": "LexiCraft",
    "Authority": "http://identity-api:8080",
    "Audience": "LexiCraft.Services",
    "Secret": "your-secret-key-here-make-it-long-enough-for-jwt-signing",
    "ExpireMinute": 60,
    "RefreshExpireMinute": 1440,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidIssuers": ["LexiCraft"],
    "ValidAudiences": ["LexiCraft.Services", "LexiCraft.Practice"],
    "ClockSkew": "00:05:00",
    "OAuthRedis": {
      "Enable": false,
      "ConnectionString": "redis:6379",
      "DefaultDatabase": 0,
      "ConnectTimeout": 5000,
      "SyncTimeout": 5000
    }
  }
}