{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "Microsoft.AspNetCore": "Warning",
            "Yarp": "Debug"
        }
    },
    "ReverseProxy": {
        "Routes": {
            "files-route": {
                "ClusterId": "files-cluster",
                "Match": {
                    "Path": "/api/files/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathPattern": "/{**catch-all}"
                    }
                ]
            },
            "identity-route": {
                "ClusterId": "identity-cluster",
                "Match": {
                    "Path": "/api/identity/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathPattern": "/{**catch-all}"
                    }
                ]
            },
            "vocabulary-route": {
                "ClusterId": "vocabulary-cluster",
                "Match": {
                    "Path": "/api/vocabulary/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathPattern": "/{**catch-all}"
                    }
                ]
            }
        },
        "Clusters": {
            "files-cluster": {
                "Destinations": {
                    "files-destination": {
                        "Address": "http://localhost:5001"
                    }
                }
            },
            "identity-cluster": {
                "Destinations": {
                    "identity-destination": {
                        "Address": "http://localhost:5002"
                    }
                }
            },
            "vocabulary-cluster": {
                "Destinations": {
                    "vocabulary-destination": {
                        "Address": "http://localhost:5003"
                    }
                }
            }
        }
    }
}