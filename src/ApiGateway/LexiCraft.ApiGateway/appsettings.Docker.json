{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Yarp": "Information"
        }
    },
    "ReverseProxy": {
        "Routes": {
            "files-route": {
                "ClusterId": "files-cluster",
                "Match": {
                    "Path": "/api/files/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathPattern": "/{**catch-all}"
                    }
                ]
            },
            "identity-route": {
                "ClusterId": "identity-cluster",
                "Match": {
                    "Path": "/api/identity/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathPattern": "/{**catch-all}"
                    }
                ]
            }
        },
        "Clusters": {
            "files-cluster": {
                "Destinations": {
                    "files-destination": {
                        "Address": "http://files-grpc:8080"
                    }
                }
            },
            "identity-cluster": {
                "Destinations": {
                    "identity-destination": {
                        "Address": "http://identity-api:8080"
                    }
                }
            }
        }
    }
}