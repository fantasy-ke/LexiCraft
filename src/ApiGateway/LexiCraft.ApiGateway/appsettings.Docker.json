{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "files-route": {
        "ClusterId": "files-cluster",
        "Match": {
          "Path": "/files/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/{**catch-all}"
          },
          {
            "X-Forwarded": "Set"
          },
          {
            "RequestHeader": "X-Forwarded-Prefix",
            "Set": "/files"
          }
        ]
      },
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/identity/{version:regex(^v\\d+)}/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{version}/identity/{**catch-all}"
          },
          {
            "X-Forwarded": "Set"
          },
          {
            "RequestHeader": "X-Forwarded-Prefix",
            "Set": "/identity/{version}"
          }
        ]
      },
      "vocabulary-route": {
        "ClusterId": "vocabulary-cluster",
        "Match": {
          "Path": "/vocabulary/{version:regex(^v\\d+)}/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{version}/vocabulary/{**catch-all}"
          },
          {
            "X-Forwarded": "Set"
          },
          {
            "RequestHeader": "X-Forwarded-Prefix",
            "Set": "/vocabulary/{version}"
          }
        ]
      },
      "practice-route": {
        "ClusterId": "practice-cluster",
        "Match": {
          "Path": "/practice/{version:regex(^v\\d+)}/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{version}/practice/{**catch-all}"
          },
          {
            "X-Forwarded": "Set"
          },
          {
            "RequestHeader": "X-Forwarded-Prefix",
            "Set": "/practice/{version}"
          }
        ]
      }
    },
    "Clusters": {
      "files-cluster": {
        "Destinations": {
          "files-destination": {
            "Address": "http://files-grpc:8080"
          }
        }
      },
      "identity-cluster": {
        "Destinations": {
          "identity-destination": {
            "Address": "http://identity-api:8080"
          }
        }
      },
      "vocabulary-cluster": {
        "Destinations": {
          "vocabulary-destination": {
            "Address": "http://vocabulary-api:8080"
          }
        }
      },
      "practice-cluster": {
        "Destinations": {
          "practice-destination": {
            "Address": "http://practice-api:8080"
          }
        }
      }
    }
  }
}
