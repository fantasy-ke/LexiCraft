{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "SerilogLogging": {
    "ApplicationName": "LexiCraft.ApiGateway",
    "EnableAsync": true,
    "EnableConsole": true,
    "EnableFileLogging": true,
    "Seq": {
      "Enabled": false,
      "ServerUrl": "http://localhost:5341",
      "ApiKey": ""
    },
    "MinimumLevelOverrides": {
      "Microsoft": "Information",
      "System": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
  },
  "AgileConfig": {
    "Nodes": "http://172.144.21.1:8500",
    "AppId": "api-gateway",
    "Secret": "bb123456",
    "ENV": "dev"
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "Window": 10,
    "QueueLimit": 10,
    "ExcludeAnonymousClients": true,
    "ForwardLimitInfoToBackend": true,
    "LimitInfoHeaderName": "X-RateLimit-Info",
    "PathSpecificConfigs": [
      {
        "PathPattern": "/identity/*",
        "PermitLimit": 50,
        "Window": 10,
        "QueueLimit": 5
      },
      {
        "PathPattern": "/vocabulary/*",
        "PermitLimit": 200,
        "Window": 10,
        "QueueLimit": 10
      }
    ]
  },
  "SecurityHeaders": {
    "EnableHsts": true,
    "EnableXContentTypeOptions": true,
    "EnableXFrameOptions": true,
    "EnableXssProtection": true,
    "ContentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';",
    "PathSpecificConfigs": [
      {
        "PathPattern": "/files/*",
        "EnableHsts": true,
        "EnableXContentTypeOptions": true,
        "EnableXFrameOptions": true,
        "EnableXssProtection": false,
        "ContentSecurityPolicy": "default-src 'self'; img-src 'self' data: https:; media-src 'self';"
      },
      {
        "PathPattern": "/identity/*",
        "EnableHsts": true,
        "EnableXContentTypeOptions": true,
        "EnableXFrameOptions": true,
        "EnableXssProtection": true,
        "ContentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"
      }
    ]
  }
}
