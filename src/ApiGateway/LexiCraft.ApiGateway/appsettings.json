{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "SerilogLogging": {
    "ApplicationName": "LexiCraft.ApiGateway",
    "EnableAsync": true,
    "EnableConsole": true,
    "EnableFileLogging": true,
    "Seq": {
      "Enabled": false,
      "ServerUrl": "http://localhost:5341",
      "ApiKey": ""
    },
    "MinimumLevelOverrides": {
      "Microsoft": "Information",
      "System": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*"
}
